{
  "name": "@jsx-email/doiuse-email",
  "version": "1.0.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "Lint CSS for email support against caniemail database.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shellscape/doiuse-email.git"
  },
  "author": {
    "name": "Leon Si",
    "email": "leon@leondreamed.com",
    "url": "https://leondreamed.com"
  },
  "homepage": "https://github.com/shellscape/doiuse-email#readme",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup --config ./tsup.config.ts",
    "format": "prettier --write .",
    "lint": "eslint --cache --fix .",
    "prepare": "husky",
    "prepublishOnly": "pnpm build",
    "release": "versioner --dry --no-commit-scopes --target $(pwd)",
    "start": "tun ./src/cli.ts",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist/**"
  ],
  "keywords": [
    "caniemail",
    "caniuse",
    "check",
    "client",
    "compat",
    "compatible",
    "compatibility",
    "css",
    "doiuse",
    "email",
    "gmail",
    "html",
    "lint",
    "stylelint",
    "support"
  ],
  "dependencies": {
    "css": "^3.0.0",
    "css-what": "^6.1.0",
    "domhandler": "^5.0.3",
    "htmlparser2": "^9.0.0",
    "micromatch": "^4.0.5",
    "style-to-object": "^1.0.4"
  },
  "devDependencies": {
    "@dot/versioner": "^0.3.4",
    "@tunnel/tun": "^0.2.1",
    "@types/css": "^0.0.35",
    "@types/micromatch": "^4.0.4",
    "@types/node": "^20.8.10",
    "desm": "^1.3.0",
    "dot-prop": "^8.0.2",
    "eslint-config-shellscape": "^6.0.2",
    "eslint-define-config": "^1.24.1",
    "execa": "^8.0.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "onetime": "^6.0.0",
    "outdent": "^0.8.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^2.1.3"
  },
  "resolutions": {
    "domhandler": "^4"
  },
  "types": "dist/index.d.mts",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --cache"
    ],
    "**/(package|tsconfig(.*)?).json": [
      "prettier --write"
    ],
    "(pnpm-workspace|.github/**/*).{yml,yaml}": [
      "prettier --write"
    ],
    "*package.json": [
      "prettier --write --plugin=prettier-plugin-package"
    ],
    "((.github/**/*)|(docs/**/*)|(web/**/*.md)|(README|CHANGELOG)|(**/(README|CHANGELOG))).md": [
      "prettier --write"
    ]
  },
  "root": true
}
